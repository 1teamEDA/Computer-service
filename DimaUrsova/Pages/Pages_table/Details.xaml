<Page x:Class="DimaUrsova.Pages.Pages_table.Details"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DimaUrsova.Pages.Pages_table"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Details">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" x:Name="StackPanelForInfoDet">
            <ComboBox x:Name="ComboboxForAddDet" Margin="0,0,0,10"></ComboBox>
            <TextBox x:Name="TextBoxForQuan" Margin="0,0,0,10"></TextBox>
                <Button Height="30" Content="+" Click="Button_Click" x:Name="CreateCombobox"></Button>
            <TextBlock x:Name="InfoForDet" Margin="0,0,0,10"></TextBlock>
            <Button VerticalAlignment="Bottom" x:Name="SaveDet"  Content="Зберегти" Click="SaveDet_Click"></Button>
            <Button Content="Повернутися"  Margin="0,0,0,10" Click="Button_Click_2" ></Button>
            </StackPanel>
        </Grid>

    
</Page>
